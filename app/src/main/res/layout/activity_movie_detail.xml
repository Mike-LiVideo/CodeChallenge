<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:background="@drawable/dialogbackground">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/large_movie_poster" />
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_movie_title"
                style="@style/MainTitle"
                android:text="Movie Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_year"
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="Year" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_mpaa_rating"
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="MPAA Rating" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="Runtime:" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_run_time"
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="00:00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="Rating:" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_rating"
                    style="@style/MainTitle.DetailTitle"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"
                    android:text="00:00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogbackground"
        android:gravity="center"
        android:paddingLeft = "25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/MainTitle"
            android:text="Synopsis" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <TextView
                android:id="@+id/tv_synopsis_string"
                style="@style/MainTitle.DetailTitle"
                android:text="A verry long string that is supposed tot represent the synopsis onf " />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
